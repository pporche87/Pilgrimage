<%- include partials/header %>
	<div class="container">
		<div class="row">
			<div class="wrap-login col-md-4 col-md-offset-4">
				<% if (message.length > 0) { %>
					<div class="alert alert-danger text-center" role="alert">
					<%= message %>
					</div>
				<% } %>
				<h2 class="text-center">Edit Post for</h2>
				<form method="post" action="/posts/post/<%= post.id %>/edit">
					<div class="form-group">
						<label for="title">Title</label>
						<input type="text" name="title" class="form-control" value="<%= post.title %>">
					</div>
					<div class="form-group">
						<label for="content">Content</label>
						<textarea name="content" rows="8" cols="80" class="form-control"><%= post.content %></textarea>
					</div>
					<input type="submit" class="btn-login btn btn-default center"></input>
				</form>
			</div>
		</div>
	</div>
<%- include partials/footer %>
