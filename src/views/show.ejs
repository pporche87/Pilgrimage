<%- include partials/header %>
<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<img src="<%= user.img_url %>" alt="Profile Picture">
				<div class="caption">
					<h3><%= user.username %></h3>
					<p><%= moment(user.date_joined).format('MMMM Do YYYY') %></p>
					<p><%= user.current_city %></p>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-md-8">
			<h1><%= post.title %></h1>
			<p><%= post.content %></p>
		</div>
	</div>
</div>
<%- include partials/footer %>
